#include <stdio.h>
int run(int x){
	return (x % 4 == 0 && x % 100 != 0)||x % 400 == 0;
	
}
int daysOfMonth(int y, int m)
{
	int days[] = {0, 31, 28 ,31, 30, 31, 30, 31, 31, 30, 31, 30, 31};
	
	if(m == 2 && run(y))
	{
		return 29;
	 } 
	 return days[m];
}
int main()
{	
	int y1 = 2020, m1 = 1, d1 = 1;
	int y2 = 2020, m2 = 12, d2 =31 ;
	
	int cnt = 0;
	while(!(y1 == y2 && m1 == m2 && d1 == d2))
	{
		cnt++;
		d1++;
		if(d1 > daysOfMonth(y1,m1))
		{
			d1 = 1;
			m1++;
		}
		if(m1 > 12)
		{
			m1 = 1;
			y1++;
		}
		
	 } 
	 
	printf("两个日期相差 %d 天\n",cnt);
	return 0;
}
